!!!
%html
  %head
    %title Lapasta
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %link{:href => "http://fonts.googleapis.com/css?family=Lobster", :rel => "stylesheet", :type => "text/css"}/
    = csrf_meta_tags
    = yield :css_js
  %body
    #container
      #header
        = render "layouts/header"
      #content_holder
        .inner
          = render "layouts/breadcrumbs"
          %h1.heading-title
            %span
              = yield :page_title
          -if params[:controller]=='products' && params[:action]=='index'
            = render "products/product_filter"
          -if params[:controller]=='products' && params[:action]=='show'
            .product-info.fixed
              = yield
            #content
              = yield :product_content
          -else
            #column-left
              = render "layouts/column_left"
            #content.content-column-left
              = yield
      -##pre_footer
      -#  = render "layouts/pre_footer"
      #footer
        = render "layouts/footer"
