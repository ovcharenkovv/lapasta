%h1 Listing categories
-for category in @categories.roots
  = link_to h(category.name), category

%table
  %tr
    %th Published
    %th Name
    %th Description
    %th
    %th
    %th

  - @categories.each do |category|
    %tr
      %td= category.published
      %td= category.name
      %td= category.description
      %td= link_to 'Show', category
      %td= link_to 'Edit', edit_category_path(category)
      %td= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Category', new_category_path
