= semantic_form_for @product do |f|
  = f.inputs do
    = f.input :published
    = f.input :title
    = f.input :price
    = f.input :supplier_price
    = f.input :supplier_id
    = f.input :category_id
    = f.input :status
    = f.input :description

  = f.actions do
    = f.action :submit, :as => :input
