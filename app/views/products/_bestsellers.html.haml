.box-content
  -bestsellers.each do |product|
    .product_unit
      =link_to category_product_path(product.category,product),:class=>"image" do
        -if !product.attachments.first.nil?
          =image_tag (product.attachments.first.attachment_url(:thumb)),  :alt => product.category.name+' '+product.title, :title => product.title
        -else
          =image_tag (product.attachments.photo_not_available)
        .descr
          %span.name=product.title
          %span.price=product.product_price
  .clear
